#include "ap.h"


extern ADC_HandleTypeDef hadc1;

uint32_t adc_data = 0;


void apInit(void)
{
  ledInit();
  pwmInit();
}

void apMain(void)
{
  uint32_t pre_time = 0;

  ledSetDuty(_DEF_CH1, 100);
  while(1)
  {
    if(millis()-pre_time >= 500)
    {
      pre_time = millis();
      ledToggle(_DEF_CH1);
    }

    HAL_ADC_Start(&hadc1);
    HAL_ADC_PollForConversion(&hadc1,10);
    HAL_ADC_GetValue()
  }
}
